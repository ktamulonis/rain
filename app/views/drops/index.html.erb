<p id="notice"><%= notice %></p>

<h1>Drops</h1>
<% @drops.each do |drop| %>
  <%= link_to drop, method: :delete, remote: true do %>
    <div class="water">
    </div>
  <% end %>
<% end %>
 

<h1>New Drop</h1>

<%= render 'form', drop: @drop %>
<script>
  // jGravity works best when targeting the body
  
    $('body').jGravity({ 
      target: 'everything'
    });
</script>